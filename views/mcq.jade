.mcqBox(id=question.id, data-config=JSON.stringify(question))
	.container-fluid
		.MCQtitle!=question.title
		
		blockquote
			p.hint_message
			-var alphabet = ['A', 'B', 'C', 'D', 'E', 'F', 'G', 'H']
			-for(var i=0; i<question.count; i++)
				label.radio-inline
					input(name=question.id+"_group", type="radio")
					b #{alphabet[i]}. 
					.MCQoption(class='ansHere'+i)
				br

			.MCQbutton
				button.btn.btn-primary.btn-sm.submitMCQ 
					b Submit
				-if(question.hint)
					button.btn.btn-info.btn-sm.hintMCQ
						b Hint

		.alert.MCQmessage
		.MCQdescription